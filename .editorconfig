root = true

[*]
max_line_length = 120
indent_style = space
indent_size = 4
continuation_indent_size = 8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8

[*.{yaml,yml}]
indent_size = 2

[*.tf]
indent_size = 2

[*.hcl]
indent_size = 2

[*.json]
indent_size = 2

[*.{js,jsx,ts,tsx}]
indent_size = 2
